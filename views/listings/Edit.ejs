<% layout("layouts/boilerplate.ejs") %>
<body class="w-100">
  <div class="row">
    <div class="col-7 offset-3">
      <h1>Edit Listing</h1>
      <form action="/listing/<%= list._id %>?_method=PUT" method="POST" class="form">
        <div class="form-group">
          <label for="Title" class="col-form-label">Title</label>
          <input type="text" id="Title" name="title" class="form-control" value="<%= list.title %>" placeholder="Write Catchy Title">
        </div>
        <div class="form-group">
          <small class="form-text text-muted">Image Preview:</small>
          <img src="<%= list.image %>" alt="Image preview" class="img-thumbnail img_of_Edit"><br>
          <label for="image" class="col-form-label">Image URL</label>
          <input type="text" id="image" name="image" class="form-control" value="<%= list.image %>" placeholder="URL of Image">
        </div>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="price" class="col-form-label">Price</label>
            <input type="text" id="price" name="price" class="form-control" value="<%= list.price %>" placeholder="Price">
          </div>
          <div class="form-group col-md-8">
            <label for="country" class="col-form-label">Country</label>
            <input type="text" id="country" name="country" class="form-control" value="<%= list.country %>" placeholder="Country">
          </div>
        </div>
        <div class="form-group">
          <label for="location" class="col-form-label">Location</label>
          <input type="text" id="location" name="location" class="form-control" value="<%= list.location %>" placeholder="Location">
        </div>
        <div class="form-group">
          <label for="description" class="col-form-label">Description</label>
          <textarea id="description" name="description" class="form-control" style="height:100px" placeholder="Write something..."><%= list.description %></textarea>
        </div>
        <div class="form-group">
          <input type="submit" value="Update Listing" class="btn btn-dark mt-2">
        </div>
      </form>
    </div>
  </div>
</body>
