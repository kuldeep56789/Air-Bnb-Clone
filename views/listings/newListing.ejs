<% layout("layouts/boilerplate.ejs") %>
<body class="w-100">
    <div class="row">
      <div class="col-7 offset-3">
        <h1>Create New Listing</h1>
    <form action="/listing" class="form" method="post">
      <div class="form-group">
        <label for="Title" class="col-form-label">Title</label>
          <input type="text" id="Title" name="title" class="form-control" placeholder="Write Catchy Title">
      </div>
      <div class="form-group">
        <label for="image" class="col-form-label">image URL</label>
          <input type="text" id="image" name="image" placeholder="URL of Image" class="form-control">
      </div>
          
      <div class="row">
        <div class="form-group col-md-4">
          <label for="price" class="col-form-label">Price</label>
          <input type="text" id="price" name="price" placeholder="Price" class="form-control">
        </div>  
        <div class="form-group col-md-8">
          <label for="country" class="col-form-label">Country</label>
          <input type="text" id="country" name="country" placeholder="Country" class="form-control">
        </div>
      </div>
        
          
      <div class="form-group">
        <label for="location" class="col-form-label">Location</label>
        <input type="text" id="location" name="location" placeholder="Location" class="form-control">
      </div>
        <div class="form-group">
          <label for="description" class="col-form-label">Description</label>
          <textarea id="description" name="description" placeholder="Write something.." class="form-control" style="height:100px"></textarea>
       </div>

       <div class="form-group">
        <input type="submit" value="Create New List" class="btn add_btn mt-2">
       </div>
        </form>
      </div>
      </div>
</body>